<h1>Productos</h1>
<ul class="list-group">
  {{#each products}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <strong>{{this.title}}</strong> - ${{this.price}} <br>
        <span class="badge badge-info">{{this.category}}</span>
      </div>
      <button class="btn btn-success" onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
    </li>
  {{/each}}
</ul>
<nav aria-label="Page navigation">
  <ul class="pagination">
    {{#if hasPrevPage}}
      <li class="page-item"><a class="page-link" href="{{prevLink}}">Anterior</a></li>
    {{/if}}
    {{#each totalPages}}
      <li class="page-item {{#ifEquals this ../page}}active{{/ifEquals}}">
        <a class="page-link" href="?page={{this}}">{{this}}</a>
      </li>
    {{/each}}
    {{#if hasNextPage}}
      <li class="page-item"><a class="page-link" href="{{nextLink}}">Siguiente</a></li>
    {{/if}}
  </ul>
</nav>
